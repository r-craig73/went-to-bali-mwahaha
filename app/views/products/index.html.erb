<h3>Products</h3>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4" align="center">
      <h4 class="click-product-name"><%= link_to product.name, product_path(product), id: "#{product.id}", remote: true %></h4>
      <div id="product-details-<%= product.id %>">
      </div>
      <p><%= number_to_currency product.price %></p>
      <%= form_for @order_item do |f| %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity, placeholder: "Input only a positive integer!" %>
        <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
      <% end %>
    </div>
  <% end %>
  </div>
</div>
